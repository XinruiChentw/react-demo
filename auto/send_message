#!/usr/bin/env bash
set -e



message_to_send() {
  cat <<EOF
{
    "msgtype": "text",
    "text": {
        "content": "OMG! Pipeline failed!",
        "mentioned_list":["@all"],
        "mentioned_mobile_list":["@all"]
    }
}
EOF
echo "First arg: $1"
}


# POST request to Discord Webhook
curl -H "Content-Type: application/json" -X POST -d "$(message_to_send $1)" $2